{
  "name": "sass-example",
  "version": "0.1.0",
  "author": "kimulaco",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:dart": "sass --no-source-map src/scss/main.scss dist/css/dart/main.css",
    "build:node": "node-sass --no-source-map src/scss/main.scss dist/css/node/main.css",
    "watch": "npm-run-all -p watch:*",
    "watch:dart": "sass --no-source-map -w src/scss/main.scss dist/css/dart/main.css",
    "watch:node": "node-sass --no-source-map -w src/scss/main.scss dist/css/node/main.css",
    "lint": "stylelint src/**/**.scss"
  },
  "devDependencies": {
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.24.2",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-scss": "^3.13.0"
  }
}
